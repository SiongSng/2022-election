name: Crawler the data

on:
  workflow_dispatch:
  schedule:
    # Runs every three hour
    - cron: "*/60 */3 * * *"

jobs:
  fetch:
    runs-on: ubuntu-latest
    env:
      GITHUB_API_TOKEN: ${{ secrets.API_TOKEN_GITHUB }}
    steps:
      - uses: actions/checkout@v3
      - name: Setup node.js
        uses: actions/setup-node@v3
      - name: Install dependencies
        run: |
          corepack enable
          yarn install
      - name: Run the script
        run: yarn script
